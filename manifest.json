{
  "manifest_version": 2,
  "name": "Battery",
  "description": "Pop a notification when the battery level reaches a specific value",
  "author": "SupeChicken666",
  "homepage_url": "https://github.com/supechicken/ChromeOS-Battery",
  "version": "1.0",
  "icons": { "256": "icon.png" },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },
  "permissions": [ "storage", "notifications" ]
}
